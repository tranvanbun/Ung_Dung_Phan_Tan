generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BankConfig {
  id           Int       @id @default(autoincrement())
  landlordId   Int       @unique
  bankCode     String
  bankName     String
  accountNo    String
  accountName  String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  payments     Payment[]
}

model Payment {
  id             Int       @id @default(autoincrement())
  tenantId       Int
  landlordId     Int
  contractId     Int?
  amount         Float
  description    String
  qrUrl          String
  transactionId  String?
  status         String    @default("PENDING") // PENDING | PAID | FAILED
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  bankConfig     BankConfig  @relation(fields: [landlordId], references: [landlordId])
}