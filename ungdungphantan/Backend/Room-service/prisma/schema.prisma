generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  area        Float
  address     String
  imageUrls   String[]
  status      String   @default("available")
  ownerId     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contract {
  id          Int      @id @default(autoincrement())
  roomId      Int
  tenantId    Int
  ownerId     Int
  startDate   DateTime
  endDate     DateTime
  totalPrice  Float
  pdfPath     String
  createdAt   DateTime @default(now())
}

